<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <Switch
            android:id="@+id/switch_mode"
            android:layout_width="94dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:showText="true"
            android:switchMinWidth="@dimen/cardview_compat_inset_shadow"
            android:switchTextAppearance="@style/My.TextAppearance"
            android:textOff="支"
            android:textOn="收"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_track" />


    </com.google.android.material.appbar.AppBarLayout>

    <EditText
            android:id = "@+id/edit_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ico_star"
            android:inputType="numberDecimal"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择分类"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorText_common"/>

    <GridView
        android:id="@+id/outcome_gridview129"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:horizontalSpacing="10dp"
        android:numColumns="5"
        android:verticalSpacing="10dp" />

    <TextView
        android:id="@+id/out_date_set129"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:drawableLeft="@drawable/ico_calender"
        android:gravity="center_vertical"
        android:text="  日期"
        android:textColor="@color/colorText_common"
        android:textSize="18sp" />

    <TextView
            android:id = "@+id/out_description_set129"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="  备注"
            android:drawableLeft="@drawable/ico_description"
            android:textColor="@color/colorText_common"
            android:clickable="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>



        <Button
            android:id = "@+id/out_button_save129"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "保存"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator1292"
        android:layout_width="match_parent"
        android:layout_height="68dp" />

</LinearLayout>